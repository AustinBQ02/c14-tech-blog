<div class="blog">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{blog.title}}</h2>
      <div>
        Posted by {{blog.user.username}} on {{format_date blog.date_created}}
      </div>
    </div>
    <div class="card-body">
      {{blog.content}}
    </div>
  </article>

  {{#if blog.Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each blog.Comments}}
          <div>
            <p>
              {{content}}
            </p>
            <p>
              &mdash; {{user.username}}, {{format_date date_created}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="blog-id" value="{{blog.id}}" />

      <label class="form-label" for="comment-body">Comment</label>

      <textarea name="comment-body" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>