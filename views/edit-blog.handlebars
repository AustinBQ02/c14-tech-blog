<div class="blog card">
  <div class="card-header">
    <h2>Edit blog</h2>
  </div>
  <form id="edit-blog-form" class="card-body">
    <input type="hidden" name="blog-id" value="{{blog.id}}" />

    <label class="form-label" for="blog-title">Title</label>
    <input type="text" name="blog-title" value="{{blog.title}}" class="form-input" />

    <label class="form-label" for="blog-content">Content</label>
    <textarea name="blog-content" class="form-input">{{blog.content}}</textarea>

    <button type="submit" class="btn">Update</button>

    <button type="button" id="delete-btn" class="btn">Delete</button>
  </form>
</div>

<script src="/js/edit.js"></script>